procesos
  proceso recorrerAvenidaPapel(E numAv: numero E numCa: numero E cant: numero ES papel: numero)
  comenzar
    Pos(numAv, numCa)
    cant:= cant - 1
    juntarPapeles(papel)
    repetir cant
      mover
      juntarPapeles(papel)
  fin
  proceso recorrerCalleFlor (E numAv: numero E numCa: numero E cant: numero ES flor: numero)
  comenzar
    Pos(numAv,numCa)
    cant:= cant - 1
    juntarFlores(flor)
    repetir cant
      mover
      juntarFlores(flor)
  fin
  proceso juntarFlores(ES flor: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flor:= flor + 1
  fin
  proceso juntarPapeles(ES papel: numero)
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      papel:= papel + 1
  fin
  proceso depositarFlores (ES flor: numero)
  comenzar
    repetir flor
      depositarFlor
  fin
  proceso depositarPapeles (ES papel: numero)
  comenzar
    repetir papel
      depositarPapel
  fin
