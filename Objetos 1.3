
package tema1;

import PaqueteLectura.GeneradorAleatorio;
import PaqueteLectura.Lector;

public class Ej03Matrices {

    public static void main(String[] args) {
	GeneradorAleatorio.iniciar();
	int [][] matriz = new int [5][5];
        int i, j;
        
        for (i=0;i<5;i++){       //Paso 3. definir la matriz de enteros de 5x5 e iniciarla con nros. aleatorios 
            for (j=0;j<5;j++){
                matriz[i][j] = GeneradorAleatorio.generarInt(31);}
        }
        System.out.println("Matriz Cargada:");
        for (i=0;i<5;i++){        //Paso 4. mostrar el contenido de la matriz en consola
            for (j=0;j<5;j++){
                System.out.print(matriz[i][j]+ " ");}
            System.out.println();
        }
    
        int fila = 1;
        int suma = 0;
        for (j=0;j<5;j++){           //Paso 5. calcular e informar la suma de los elementos de la fila 1
            suma = suma + matriz[fila][j];
        }
        System.out.print("Suma De Los Elementos De La Fila 1 :" + suma);
        System.out.println();
        int DF = 5;
        int [] vector = new int [DF];
        for (i=0;i<5;i++){
            vector[i] = 0;
        }
         for (i=0;i<DF;i++){       
            for (j=0;j<5;j++){
                vector[j] = vector[j]+ matriz[i][j];}
         }
         
        for (i=0;i<DF;i++){
            System.out.println("La suma de valores de la columna: "+i+" Es igual a: " + vector[i]);
        }
        int num;
        System.out.println("Ingrese un numero entre 0 y 30: ");
        num = Lector.leerInt();
        boolean encontre = false;
          for (i=0;i<DF;i++){       
            for (j=0;j<5;j++){
                if(num == matriz[i][j]){
                    System.out.println("El numero Se Encuentra En La Fila: "+i+" Columna: "+j);
                    encontre = true;
                }
            }
          }
          if (encontre==false)
              System.out.println("No Se Encontro El Numero");
    }
}
