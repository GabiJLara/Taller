robots
  robot robot1
  variables
    flores : numero
    esquinasVacias: numero    
  comenzar
    flores:= 0
    esquinasVacias:= 0
    recorrerAvenida(flores,esquinasVacias)
    Informar(flores)
    Informar(esquinasVacias)
  fin
