procesos
  proceso recorrerAvenidaPapel(E numAv: numero ES papel: numero)
  comenzar
    Pos(numAv, 1)
    juntarPapeles(papel)
    repetir 99
      mover
      juntarPapeles(papel)
  fin
  proceso recorrerAvenidaFlor (E numAv: numero ES flor: numero)
  comenzar
    Pos(numAv,1)
    juntarFlores(flor)
    repetir 99
      mover
      juntarFlores(flor)
  fin
  proceso juntarFlores(ES flor: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flor:= flor + 1
  fin
  proceso juntarPapeles(ES papel: numero)
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      papel:= papel + 1
  fin
  proceso recorrerCuadrantePar (E numCuadrante: numero ES papel: numero)
  variables 
    aux: numero
  comenzar
    si numCuadrante= 2
      aux:= 26
    sino
      aux:= 76
    repetir 25
      recorrerAvenidaPapel(aux,papel)
      aux:= aux + 1
  fin
  proceso recorrerCuadranteImpar (E numCuadrante: numero ES flor:numero)
  variables
    aux: numero
  comenzar
    si numCuadrante = 1
      aux:= 1
    sino
      aux:= 51
    repetir 25
      recorrerAvenidaFlor(aux,flor)
      aux:= aux+ 1
  fin
