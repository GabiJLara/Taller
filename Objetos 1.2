
package tema1;


import PaqueteLectura.Lector;

public class Ej02Jugadores {

  
    public static void main(String[] args) {
        int DF = 15;
        double [] jugadores = new double [DF];
        int i;
        double total;
        double promedio;
        int asereje;
        total = 0;
        asereje = 0;
        for (i=0;i<DF;i++)
        {
                System.out.println("Ingrese Altura ");
                jugadores[i] = Lector.leerDouble();
                total = total + jugadores[i];
        }
        promedio = total/DF;
        System.out.println("Promedio De Altura De jugadores: " + promedio);
        for (i=0;i<DF;i++){
            if (jugadores[i] > promedio)
                asereje++;
        }
        System.out.println("Cantidad De jugadores Por encima del promedio: " + asereje);
    }
    
}
