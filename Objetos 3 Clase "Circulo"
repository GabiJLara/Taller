
package tema3;


public class Circulo {
    double radio;
    String colorR;
    String colorL;

    public double getRadio() {
        return radio;
    }

    public void setRadio(double radio) {
        this.radio = radio;
    }

    public String getColorR() {
        return colorR;
    }

    public void setColorR(String colorR) {
        this.colorR = colorR;
    }

    public String getColorL() {
        return colorL;
    }

    public void setColorL(String colorL) {
        this.colorL = colorL;
    }
    
    public Circulo(double unRadio, String unColorR, String unColorL) {
        this.radio= unRadio;
        this.colorR= unColorR;
        this.colorL=unColorL;
    }
    
    public double getPerimetro(){
        double perimetro;
        perimetro= 2*this.getRadio()* Math.PI;
        return(perimetro);
    }
    
    public double getArea (){
        double Area;
        Area=Math.PI*this.getRadio()*this.getRadio();
        return(Area);
    }
}
