programa Practica3Ejercicio1
procesos
  proceso tepear(E numAv: numero E numCa: numero)
  comenzar
    Pos(numAv, numCa)
  fin
  proceso juntarFlores (ES flor: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flor:= flor + 1
  fin
  proceso juntarPapeles(ES papel: numero)
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      papel:= papel + 1
  fin
  proceso floreros (E intentos: numero)
  variables
    ca,av,flor,avInicial: numero
  comenzar
    avInicial:= PosAv
    repetir intentos
      flor:=0
      Random(av,1,5)
      Random(ca,1,10)
      BloquearEsquina(av,ca)
      Pos(av,ca)
      juntarFlores(flor)
      BloquearEsquina(10,10)
      Pos(10,10)
      LiberarEsquina(av,ca)
      repetir flor
        depositarFlor
      Pos(avInicial,10)
      LiberarEsquina(10,10)
  fin
  proceso papeleros (E intentos: numero)
  variables
    ca,av,papel,avInicial: numero
  comenzar
    avInicial:= PosAv
    repetir intentos
      papel:=0
      Random(av,6,10)
      Random(ca,1,9)
      BloquearEsquina(av,ca)
      Pos(av,ca)
      juntarPapeles(papel)
      BloquearEsquina(10,10)
      Pos(10,10)
      LiberarEsquina(av,ca)
      repetir papel
        depositarPapel
      Pos(avInicial,10)
      LiberarEsquina(10,10)
  fin
areas
  areaFloreros: AreaPC (1,1,5,10)
  areaPapeleros: AreaPC (6,1,10,9)
  area1: AreaP(6,10,6,10)
  area2: AreaP(7,10,7,10)
  area3: AreaP(8,10,8,10)
  area4: AreaP(9,10,9,10)
  area: AreaC(10,10,10,10)
robots
  robot robot2
