procesos
  proceso escalon(E cant: numero ES supero: numero)
  variables
    papeles: numero
    flores: numero
  comenzar
    flores:= 0
    papeles:= 0
    repetir 2
      repetir cant
        juntarPapeles(papeles)
        juntarFlores(flores)
        depositarTodo(flores, papeles)
        mover
      girar(1)
    girar(2) 
    flores:= flores + 1
    si flores= papeles
      supero := supero + 1
  fin
  proceso escalera (E cantidad:numero ES supero: numero)
  variables
    num:numero
  comenzar
    num:=1
    repetir cantidad
      escalon(num, supero)
      num:= num + 1
      
  fin
  proceso juntarPapeles (ES papel: numero)
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      papel:= papel + 1
  fin
  proceso juntarFlores (ES flor:numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flor:= flor + 1
  fin
  proceso girar (E cant: numero)
  comenzar
    repetir cant
      derecha
  fin
  proceso depositarTodo (E f: numero E p:numero)
  comenzar
    repetir f
      depositarFlor
    repetir p
      depositarPapel
  fin
